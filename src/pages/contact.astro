---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us | Divine Connection">
  <Navbar />
  
  <main class="flex-1 w-full pt-24 pb-12">
    <!-- Header -->
    <section class="max-w-[1200px] mx-auto px-6 mb-16 text-center">
      <span class="bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent font-bold text-sm uppercase tracking-[0.2em] mb-4 block opacity-0 animate-fade-in-up">Get in Touch</span>
      <h1 class="font-serif text-5xl md:text-7xl font-light italic leading-tight mb-6 text-slate-900 opacity-0 animate-fade-in-up delay-100"><span class="text-gradient">Contact Us</span></h1>
      <p class="text-lg text-slate-600 font-light leading-relaxed max-w-2xl mx-auto opacity-0 animate-fade-in-up delay-200">
        We would love to hear from you. Visit us this Sunday, give us a call, or send us a message.
      </p>
    </section>

    <!-- Content Grid -->
    <section class="max-w-[1200px] mx-auto px-6 mb-24">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-24 opacity-0 animate-fade-in-up delay-300">
        
        <!-- Info -->
        <div class="space-y-12">
          <!-- Address -->
          <div class="flex gap-6">
            <div class="size-12 rounded-2xl bg-purple-50 flex items-center justify-center shrink-0">
               <span class="material-symbols-outlined text-purple-600">location_on</span>
            </div>
            <div>
              <h3 class="font-bold text-lg text-slate-900 mb-2">Visit Us</h3>
              <p class="text-slate-600 leading-relaxed mb-4">
                3926 Bexley Place<br/>
                Suitland, MD 20746
              </p>
              <a href="https://maps.google.com/?q=3926+Bexley+Place,+Suitland,+MD+20746" target="_blank" class="text-purple-600 font-bold text-sm hover:underline">Get Directions</a>
            </div>
          </div>

          <!-- Contact Info -->
          <div class="flex gap-6">
            <div class="size-12 rounded-2xl bg-blue-50 flex items-center justify-center shrink-0">
               <span class="material-symbols-outlined text-blue-600">contact_support</span>
            </div>
            <div>
              <h3 class="font-bold text-lg text-slate-900 mb-2">Contact Info</h3>
              <p class="text-slate-600 leading-relaxed mb-2">
                <span class="font-bold text-slate-400 text-xs uppercase tracking-widest block mb-1">Phone</span>
                (301) 736-6200
              </p>
              <p class="text-slate-600 leading-relaxed">
                <span class="font-bold text-slate-400 text-xs uppercase tracking-widest block mb-1">Email</span>
                info@dcpministry.org
              </p>
            </div>
          </div>

          <!-- Service Times -->
          <div class="flex gap-6">
             <div class="size-12 rounded-2xl bg-slate-50 flex items-center justify-center shrink-0">
               <span class="material-symbols-outlined text-slate-600">schedule</span>
            </div>
            <div>
              <h3 class="font-bold text-lg text-slate-900 mb-4">Service Times</h3>
              <ul class="space-y-3">
                 <li class="flex items-center justify-between gap-8 border-b border-slate-100 pb-2">
                  <span class="text-slate-600">Sunday Morning Glory</span>
                  <span class="font-bold text-slate-900">9:00 AM</span>
                </li>
                 <li class="flex items-center justify-between gap-8 border-b border-slate-100 pb-2">
                  <span class="text-slate-600">Morning Corporate Prayer</span>
                  <span class="font-bold text-slate-900">9:30 AM</span>
                </li>
                <li class="flex items-center justify-between gap-8 border-b border-slate-100 pb-2">
                  <span class="text-slate-600">Sunday Worship</span>
                  <span class="font-bold text-slate-900">11:00 AM</span>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Map / Image -->
        <div class="h-full min-h-[400px] rounded-3xl overflow-hidden shadow-2xl bg-slate-100 relative group">
           <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105" style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuDKUYDv2qKP5FPTPd5VZvszSdjaPATw88EsGuXO_9V-ybQsW5vwj9yi_zplPG0fE_svrvQ5_z_V0K5VSnQ_dEzo87fMxzGU8rWWDB1qNIiFIe1NB3ELt1EeI1z69Ubt_ZaseitniZrqWpJLWTCUpvGgHOPCgl8-CIIv41zMCMMHKdADpxUtY8DRV8W1jSXPjcc6SLNLFKzKhcw8P8YGST_aKnCqjFpFiejyGKsvFwyG0VfsnFEh839Z3K7OsP1-TsCo-jhnT70N7Q4');"></div>
             <!-- Map Overlay -->
            <div class="absolute inset-0 bg-purple-900/10 flex items-center justify-center pointer-events-none">
              <span class="bg-white p-4 rounded-full shadow-xl animate-bounce">
                <span class="material-symbols-outlined text-purple-600 text-3xl">location_on</span>
              </span>
            </div>
        </div>

      </div>
    </section>

    <!-- Connect Card CTA -->
    <section class="max-w-[1200px] mx-auto px-6">
        <div class="bg-slate-900 rounded-[2rem] p-12 md:p-16 text-center relative overflow-hidden">
             <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-purple-800/40 to-transparent"></div>
             <div class="relative z-10">
                 <h2 class="font-serif text-3xl md:text-5xl font-medium italic text-white mb-6">First time guest?</h2>
                 <p class="text-slate-300 max-w-2xl mx-auto mb-10 text-lg">We'd love to connect with you. Fill out our digital connect card so we can welcome you properly.</p>
                 <a href="/connect" class="inline-block bg-white text-slate-900 px-8 py-4 rounded-xl font-bold hover:scale-105 transition-transform">
                    Fill Out Connect Card
                 </a>
             </div>
        </div>
    </section>

  </main>
  
  <Footer />
</Layout>

<style>
  .text-gradient {
        background: linear-gradient(to right, #9333ea, #2563eb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
