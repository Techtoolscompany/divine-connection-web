---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import StickyScrollSection from '../components/StickyScrollSection';
import VisionSection from '../components/VisionSection';
import NextStepsSection from '../components/NextStepsSection';
import WhatToExpectSection from '../components/WhatToExpectSection';
import EventsPreviewSection from '../components/EventsPreviewSection';
import MobileAppCTA from '../components/MobileAppCTA.astro';
import LatestSermon from '../components/LatestSermon';
import PastorsSection from '../components/PastorsSection';
---

<Layout title="Divine Connection | Suitland, MD">
  <Navbar />
  
  <main>
    <!-- Hero Section - Dark Cinematic -->
    <section class="relative h-screen min-h-[800px] w-full flex flex-col items-center justify-center overflow-hidden bg-slate-900">
      <!-- Video Background (with image fallback) -->
      <div class="absolute inset-0 z-0">
        <!-- Uncomment when you have a video file -->
        <!-- <video 
          autoplay 
          muted 
          loop 
          playsinline 
          class="video-bg"
          poster="https://lh3.googleusercontent.com/aida-public/AB6AXuD7s6yZDcsi7_2V0STUEciDYWShaa2LgVromYB4ixRo2P0m09euQbnhvmKVFdCmyYRwrDkkC0h8_krM1hOFM1vVB6nkWHaUmD-VdvWy91d701O-RfaEnQ-imHGCEvgOo15HCctJPCGo4YlcWVXIL5zlyW5IjHD2ZgovydaOC1sX8rb5IDPuKVbKFzNbk5zIAvfjM8xHXSRfpTWeoHROyHCxs3Mu-o3xF9U4XkER22U7vFgrUS2hv1TNLbyh0iH3YK8F8zMPevcxZbM"
        >
          <source src="/videos/worship-hero.mp4" type="video/mp4" />
        </video> -->
        
        <!-- Image fallback -->
        <div 
          class="w-full h-full bg-cover bg-center scale-105" 
          style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuD7s6yZDcsi7_2V0STUEciDYWShaa2LgVromYB4ixRo2P0m09euQbnhvmKVFdCmyYRwrDkkC0h8_krM1hOFM1vVB6nkWHaUmD-VdvWy91d701O-RfaEnQ-imHGCEvgOo15HCctJPCGo4YlcWVXIL5zlyW5IjHD2ZgovydaOC1sX8rb5IDPuKVbKFzNbk5zIAvfjM8xHXSRfpTWeoHROyHCxs3Mu-o3xF9U4XkER22U7vFgrUS2hv1TNLbyh0iH3YK8F8zMPevcxZbM');"
          data-alt="Worship service with congregation"
        ></div>
        
        <!-- Dark gradient overlay -->
        <div class="video-overlay"></div>
        
        <!-- Animated glow orbs -->
        <div class="absolute top-1/4 left-1/4 w-[600px] h-[600px] bg-purple-600/20 rounded-full blur-[150px] animate-pulse"></div>
        <div class="absolute bottom-1/4 right-1/4 w-[500px] h-[500px] bg-blue-600/15 rounded-full blur-[120px] animate-pulse" style="animation-delay: 1s;"></div>
      </div>
      
      <!-- Live Service Badge (show during live streams) -->
      <!-- <div class="absolute top-28 left-1/2 -translate-x-1/2 z-20">
        <a href="/live" class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-600/90 backdrop-blur-sm text-white text-xs font-bold uppercase tracking-widest animate-pulse">
          <span class="w-2 h-2 bg-white rounded-full animate-ping"></span>
          Watch Live Now
        </a>
      </div> -->
      
      <!-- Hero Content -->
      <div class="relative z-10 text-center px-4 max-w-5xl mx-auto space-y-8">
        <!-- Overline -->
        <p class="text-xs font-bold uppercase tracking-[0.3em] text-purple-400 opacity-0 animate-fade-in-down delay-100">
          Welcome Home
        </p>
        
        <!-- Main Title with Editorial Serif -->
        <h1 class="opacity-0 animate-fade-in-up delay-200">
          <span class="block text-5xl md:text-7xl lg:text-8xl font-black leading-[0.9] tracking-tighter uppercase text-white">
            Divine Connection
          </span>
          <span class="block mt-2 text-3xl md:text-5xl lg:text-6xl heading-editorial-italic text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-blue-400 to-purple-400">
            Praise Ministry
          </span>
        </h1>
        
        <!-- Tagline with decorative line -->
        <div class="relative opacity-0 animate-fade-in-up delay-300">
            <div class="flex items-center justify-center gap-4 text-slate-400">
              <span class="w-12 h-[1px] bg-gradient-to-r from-transparent to-purple-500"></span>
              <p class="text-sm md:text-base font-medium tracking-wide text-white">
                <span class="font-bold">Faith</span>
                <span class="mx-2">•</span>
                <span class="font-bold">Family</span>
                <span class="mx-2">•</span>
                <span class="font-bold">Finances</span>
              </p>
              <span class="w-12 h-[1px] bg-gradient-to-l from-transparent to-blue-500"></span>
            </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-6 opacity-0 animate-fade-in-up delay-400">
          <a 
            href="/connect" 
            class="min-w-[220px] flex items-center justify-center gap-2 btn-gradient text-white h-14 px-8 rounded-xl font-black uppercase tracking-widest shadow-2xl shadow-purple-500/30 hover:shadow-purple-500/50 transition-shadow"
          >
            <span>Plan Your Visit</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a 
            href="/sermons" 
            class="min-w-[200px] flex items-center justify-center gap-2 btn-outline-light h-14 px-8 rounded-xl font-bold uppercase tracking-widest"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <span>Watch Sermons</span>
          </a>
        </div>
        
        <!-- Service Times -->
        <div class="pt-8 opacity-0 animate-fade-in-up delay-500">
          <p class="text-slate-500 text-sm font-medium">
            Join us <span class="text-white font-bold">Sundays at 10:00 AM</span> in Suitland, MD
          </p>
        </div>
      </div>
      
      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 opacity-0 animate-fade-in-up delay-500">
        <div class="flex flex-col items-center gap-2 text-slate-500">
          <span class="text-[10px] uppercase tracking-widest font-bold">Scroll</span>
          <div class="w-6 h-10 border-2 border-slate-600 rounded-full flex justify-center pt-2">
            <div class="w-1 h-2 bg-purple-500 rounded-full animate-bounce"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Sticky Scroll Section (Faith, Family, Finances) -->
    <StickyScrollSection client:visible />

    <!-- Next Steps Section -->
    <NextStepsSection client:visible />

    <!-- Vision Section -->
    <VisionSection client:visible />

    <!-- Latest Sermon Section -->
    <LatestSermon client:visible />

    <!-- Pastors Section -->
    <PastorsSection client:visible />

    <!-- What to Expect / FAQ Section -->
    <WhatToExpectSection client:visible />

    <!-- Events Section -->
    <EventsPreviewSection client:visible />

    <!-- Mobile App CTA -->
    <MobileAppCTA />
  </main>

  <Footer />
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .delay-100 {
    animation-delay: 0.1s;
  }
  
  .delay-200 {
    animation-delay: 0.2s;
  }
  
  .delay-300 {
    animation-delay: 0.3s;
  }
</style>
