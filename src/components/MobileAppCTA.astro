<section class="py-24 relative overflow-hidden">
  <div class="absolute inset-0 bg-slate-900"></div>
  <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1557683316-973673baf926?q=80&w=2629&auto=format&fit=crop')] bg-cover bg-center opacity-10"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-purple-900/90 to-blue-900/90"></div>
  
  <div class="max-w-[1200px] mx-auto px-6 relative z-10">
    <div class="flex flex-col md:flex-row items-center justify-between gap-12">
      <div class="flex-1 space-y-8 text-center md:text-left">
        <h2 class="text-4xl md:text-5xl font-black uppercase tracking-tighter text-white leading-tight">
          Ministry in <br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-blue-400">Your Pocket</span>
        </h2>
        <p class="text-lg text-white/80 max-w-xl font-medium leading-relaxed mx-auto md:mx-0">
          Stay connected wherever you go. Watch sermons, submit prayer requests, give securely, and get notified about upcoming events instantly.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <button class="flex items-center gap-3 bg-white text-slate-900 px-6 py-3.5 rounded-xl transition-transform hover:scale-105 shadow-xl">
            <img src="https://upload.wikimedia.org/wikipedia/commons/3/3c/Download_on_the_App_Store_Badge.svg" alt="App Store" class="h-8" />
          </button>
          <button class="flex items-center gap-3 bg-white text-slate-900 px-6 py-3.5 rounded-xl transition-transform hover:scale-105 shadow-xl">
            <img src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg" alt="Google Play" class="h-8" />
          </button>
        </div>
      </div>
      
      <div class="flex-1 relative flex justify-center">
        <!-- Phone Mockup Frame -->
        <div class="relative w-[280px] h-[580px] bg-slate-900 rounded-[3rem] border-8 border-slate-800 shadow-2xl skew-y-6 md:translate-y-12 transition-transform duration-700 hover:skew-y-0 hover:scale-105">
            <div class="absolute inset-0 w-full h-full bg-slate-800 rounded-[2.5rem] overflow-hidden">
                <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuD7s6yZDcsi7_2V0STUEciDYWShaa2LgVromYB4ixRo2P0m09euQbnhvmKVFdCmyYRwrDkkC0h8_krM1hOFM1vVB6nkWHaUmD-VdvWy91d701O-RfaEnQ-imHGCEvgOo15HCctJPCGo4YlcWVXIL5zlyW5IjHD2ZgovydaOC1sX8rb5IDPuKVbKFzNbk5zIAvfjM8xHXSRfpTWeoHROyHCxs3Mu-o3xF9U4XkER22U7vFgrUS2hv1TNLbyh0iH3YK8F8zMPevcxZbM" alt="Mobile App Screen" class="w-full h-full object-cover opacity-80" />
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent"></div>
                
                <!-- Mock App UI -->
                <div class="absolute top-8 left-0 right-0 px-6 text-center">
                    <span class="text-white font-black uppercase tracking-widest text-xs">Divine App</span>
                </div>
                <div class="absolute bottom-12 left-6 right-6 space-y-3">
                    <div class="h-24 bg-white/10 backdrop-blur rounded-xl p-4 border border-white/10">
                        <div class="h-2 w-12 bg-white/20 rounded-full mb-3"></div>
                        <div class="space-y-2">
                            <div class="h-2 w-full bg-white/10 rounded-full"></div>
                            <div class="h-2 w-2/3 bg-white/10 rounded-full"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>
